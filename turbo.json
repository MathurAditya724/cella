{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalDotEnv": ["env/.env"],
  "globalDependencies": ["config"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "push": {},
    "migrate:pg": {},
    "migrate:electric": {},
    "generate:pg": {},
    "generate:electric": {},
    "studio": {},
    "seed:user": {},
    "seed:organizations": {},
    "seed:data": {},
    "check:types": {},
    "prepare:electric": {},
    "prepare:electric:dev": {}
  }
}
