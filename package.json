{
  "name": "cella",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "repository": "https://github.com/cellajs/cella",
  "description": "Intuivive TypeScript template to build local-first web apps. Implementation-ready. MIT licensed.",
  "keywords": ["template", "monorepo", "fullstack", "typescript", "hono", "drizzle", "shadcn", "postgres", "react", "vite", "PWA"],
  "author": "CellaJS <info@cellajs.com>",
  "homepage": "https://cellajs.com",
  "type": "module",
  "engines": {
    "node": ">=20.14.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "lefthook install && docker compose --env-file backend/.env build && docker compose --env-file backend/.env create",
    "backend": "turbo run --filter backend",
    "frontend": "turbo run --filter frontend",
    "docker": "docker compose --env-file backend/.env up",
    "docker:down": "docker compose down",
    "clean": "rimraf backend/dist frontend/dist frontend/stats",
    "dev": "pnpm run clean && turbo dev  --filter docker --filter backend --filter frontend --filter tus",
    "check": "pnpm dlx @biomejs/biome check .",
    "check:types": "turbo check:types --force",
    "check:fix": "pnpm dlx @biomejs/biome check --write .",
    "build": "pnpm run clean && turbo build --filter backend --filter frontend --filter tus",
    "build:dev": "turbo build:dev --filter backend --filter frontend --filter tus",
    "start": "turbo start --filter backend --filter frontend --filter tus",
    "email:dev": "turbo dev --filter email"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.2",
    "@evilmartians/lefthook": "^1.6.18",
    "rimraf": "^5.0.7",
    "turbo": "^2.0.6",
    "typescript": "^5.5.2"
  },
  "packageManager": "pnpm@9.1.2"
}
