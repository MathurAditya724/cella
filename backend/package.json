{
  "name": "backend",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=20.14.0"
  },
  "scripts": {
    "start": "tsx dist/index.cjs",
    "dev": "pnpm run studio & tsup --watch --onSuccess \"tsx dist/index.cjs\"",
    "check:types": "tsc",
    "build": "NODE_ENV=production tsup",
    "build:dev": "tsup",
    "docker:up": "docker compose --env-file .env up",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org cella --project backend ./dist && sentry-cli sourcemaps upload --org cella --project backend ./dist",
    "build:sourcemaps": "NODE_ENV=production tsup && pnpm run sentry:sourcemaps",
    "seed:pivotal": "tsx seed/pivotal/pivotal.ts",
    "seed:user": "tsx seed/user/index.ts",
    "seed:organizations": "tsx seed/organizations/index.ts",
    "seed:data": "tsx seed/data/index.ts",
    "seed": "tsx scripts/seed.ts",
    "generate:pg": "drizzle-kit generate --config drizzle.config.ts",
    "electric:generate": "drizzle-kit generate --config drizzle.config.electric.ts",
    "electric:generate:custom": "drizzle-kit generate --config drizzle.config.electric.ts --custom",
    "electric:migrate": "drizzle-kit migrate --config drizzle.config.electric.ts",
    "generate": "pnpm run generate:pg && pnpm run electric:generate",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio --config drizzle.config.ts",
    "electric:proxy": "electric-sql proxy-tunnel --service https://electric-sync.cellajs.com --local-port 65432",
    "predeploy": "pnpm run electric:proxy & pnpm run electric:migrate"
  },
  "dependencies": {
    "@cellajs/imado": "^0.1.2",
    "@cellajs/permission-manager": "^0.1.0",
    "@hono/node-server": "^1.12.0",
    "@hono/sentry": "^1.2.0",
    "@hono/zod-openapi": "^0.15.1",
    "@logtail/node": "^0.4.21",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@lucia-auth/adapter-postgresql": "^3.1.2",
    "@novu/node": "^0.24.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/instrumentation-http": "^0.52.1",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@paddle/paddle-node-sdk": "^1.4.1",
    "@react-email/render": "^0.0.17",
    "@scalar/hono-api-reference": "^0.5.134",
    "@sentry/cli": "^2.31.2",
    "@t3-oss/env-core": "^0.11.0",
    "arctic": "^1.9.2",
    "cbor": "^9.0.2",
    "config": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "electric-sql": "^0.12.1",
    "email": "workspace:*",
    "enforce-unique": "^1.3.0",
    "hono": "^4.5.4",
    "i18next": "^23.12.2",
    "isbot": "^5.1.14",
    "jose": "^5.6.3",
    "jsonwebtoken": "^9.0.2",
    "locales": "workspace:*",
    "lucia": "^3.2.0",
    "nanoid": "^5.0.7",
    "node-cron": "^3.0.3",
    "oslo": "^1.2.1",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^5.0.3",
    "react-i18next": "^15.0.1",
    "slugify": "^1.6.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@faker-js/faker": "^8.4.1",
    "@types/node-cron": "^3.0.11",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/papaparse": "^5.3.14",
    "@types/pg": "^8.11.6",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "drizzle-kit": "^0.24.0",
    "hanji": "^0.0.5",
    "jszip": "^3.10.1",
    "papaparse": "^5.4.1",
    "tsup": "^8.1.0",
    "tsx": "^4.17.0"
  },
  "babel": {
    "presets": ["@babel/preset-typescript"]
  },
  "exports": {
    "./*": "./src/*.ts"
  }
}
